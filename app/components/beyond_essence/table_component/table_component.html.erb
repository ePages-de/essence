<%= render BeyondEssence::ScrollShadowComponent.new do %>
  <table <%= tag.attributes **html_options %>>
    <thead>
      <% columns.each do |column| %>
        <th><%= column.label %></th>
      <% end %>
    </thead>
    <tbody>
      <% rows.each do |row| %>
        <tr>
          <% columns.each do |column| %>
            <td>
              <%= view_context.capture(row, &column.block) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
