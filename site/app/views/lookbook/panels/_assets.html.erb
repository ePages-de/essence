<style type="text/css">
  .asset-preview + .asset-preview {
    margin-top: 30px;
  }
  .asset-header {
    display: flex;
    align-items: center;
    padding-left: 4px;
    padding-right: 4px;
    margin-bottom: 6px;
  }
  .asset-icon {
    margin-right: 6px;
    color: var(--lookbook-accent-500);
  }
  .asset-title {
    font-size: 12px;
    opacity: 0.75;
  }
  .asset-contents {
    background: #fff;
    overflow: hidden;
    border-radius: 6px;
    border: 1px solid var(--lookbook-divider);
  }
</style>

<% if assets.any? %>
  <div class="lookbook-panel">
    <% assets.each do |asset| %>
      <div class="asset-preview">
        <header class="asset-header">
          <%= icon :file, size: 3.5, class: "asset-icon" %>
          <h4 class="asset-title font-mono"><%= asset[:path].relative_path_from(BeyondEssence::Engine.root) %></h4>
        </header>
        <div class="asset-contents">
          <%= code language: asset[:language], line_numbers: true do %><%= File.read(asset[:path]) %><% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="p-4 w-full h-full bg-lookbook-prose-bg">
    <%= lookbook_render :prose do %>
      <em class='opacity-50'>No assets to display.</em>
    <% end %>
  </div>
<% end %>
