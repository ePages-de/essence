<%= simple_fields_for nil do |f| %>
  <%= f.input :email,
              as: :email,
              required:,
              label: label ? nil : false,
              hint: hint ? nil : false,
              placeholder: placeholder ? nil : false,
              disabled:,
              error: error ? t('simple_form.errors.email') : nil,
              input_html: { value: disabled || error ? t('simple_form.values.email') : nil } %>
<% end %>
