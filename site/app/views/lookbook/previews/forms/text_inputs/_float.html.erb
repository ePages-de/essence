<%= simple_fields_for nil do |f| %>
  <%= f.input :float,
              as: :float,
              required:,
              label: label ? nil : false,
              hint: hint ? nil : false,
              placeholder: placeholder ? nil : false,
              disabled:,
              error: error ? t('simple_form.errors.float') : nil,
              input_html: { value: disabled || error ? t('simple_form.values.float') : nil } %>
<% end %>
