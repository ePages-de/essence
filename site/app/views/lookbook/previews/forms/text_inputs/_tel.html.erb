<%= simple_fields_for nil do |f| %>
  <%= f.input :tel,
              as: :tel,
              required:,
              label: label ? nil : false,
              hint: hint ? nil : false,
              placeholder: placeholder ? nil : false,
              disabled:,
              error: error ? t('simple_form.errors.tel') : false,
              input_html: { value: disabled || error ? t('simple_form.values.tel') : false } %>
<% end %>
